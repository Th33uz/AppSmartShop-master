<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161925"
    android:padding="16dp"
    tools:context=".ui.editlista.EditListaActivity">

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtTituloEditLista"
        app:layout_constraintBottom_toBottomOf="@id/txtTituloEditLista" />

    <TextView
        android:id="@+id/txtTituloEditLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar lista"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/montserratalternatesextrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnVoltar"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/lblNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloEditLista"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/inputNomeLista"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nome da sua lista"
        android:background="@drawable/bg_campo"
        android:textColor="@android:color/white"
        android:textColorHint="#838383"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblImagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagem"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/inputNomeLista"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:id="@+id/containerImagem"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="#2A2B38"
        app:layout_constraintTop_toBottomOf="@id/lblImagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgPreviewLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/iconeimg"
            android:scaleType="centerInside"
            android:contentDescription="Prévia da imagem"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSelecionarImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconecamera"
            app:backgroundTint="#9956F6"
            android:layout_gravity="end|bottom"
            android:layout_margin="12dp"/>
    </FrameLayout>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Salvar Alterações"
        android:textSize="16sp"
        android:fontFamily="@font/montserratalternatesextrabold"
        android:backgroundTint="#9956F6"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/containerImagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Excluir Lista"
        android:textSize="16sp"
        android:fontFamily="@font/montserratalternatesextrabold"
        android:backgroundTint="#E53935"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSalvar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>