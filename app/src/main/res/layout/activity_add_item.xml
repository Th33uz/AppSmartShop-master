<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161925"
    tools:context=".ui.additem.AddItemActivity">

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtTitulo"
        app:layout_constraintBottom_toBottomOf="@id/txtTitulo"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar item"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserratalternatesextrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnVoltar"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/lblNomeItem"
        android:text="Nome Item"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/inputNomeItem"
        app:layout_constraintBottom_toTopOf="@+id/inputNomeItem"
        />

    <EditText
        android:id="@+id/inputNomeItem"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nome do item"
        android:background="@drawable/bg_campo"
        android:textColor="@android:color/white"
        android:textColorHint="#838383"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/lblQtditem"
        android:text="Quantidade"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/inputQuantidade"
        app:layout_constraintBottom_toTopOf="@+id/inputQuantidade"
        />

    <EditText
        android:id="@+id/inputQuantidade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Quantidade"
        android:inputType="number"
        android:background="@drawable/bg_campo"
        android:textColor="@android:color/white"
        android:textColorHint="#838383"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputNomeItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinnerUnidade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/lblSpnrQtd"
        android:text="KG | Unidade | Gramas"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/spinnerUnidade"
        app:layout_constraintBottom_toTopOf="@+id/spinnerUnidade"
        />

    <Spinner
        android:id="@+id/spinnerUnidade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_campo"
        app:layout_constraintTop_toBottomOf="@id/inputNomeItem"
        app:layout_constraintStart_toEndOf="@id/inputQuantidade"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/lblCatItem"
        android:text="Categoria"
        android:textSize="14sp"
        android:textColor="#BBBBBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/spinnerCategoria"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCategoria"
        />
    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_campo"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputQuantidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"/>


    <Button
        android:id="@+id/btnAdicionarItem"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Adicionar"
        android:backgroundTint="#9956F6"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserratalternatesextrabold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spinnerCategoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/HomeLogo"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:src="@drawable/iconapp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>